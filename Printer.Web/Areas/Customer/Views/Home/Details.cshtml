@model ShoppingCart

<div class="inner-banner inner-bg2">
    <div class="container">
        <div class="inner-title">
            <h3>Product Details </h3>
            <ul>
                <li>
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li>
                    <i class='bx bxs-chevrons-right'></i>
                </li>
                <li>Product Details </li>
            </ul>
        </div>
    </div>
</div>

<form method="post">
    <input hidden asp-for="ProductId" />
<section class="product-detls ptb-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-12">
                    <div class="product-detls-image card-header text-bg ml-0  row ">
                        <img src="@Model.Product.ImageUrl" alt="Image" class="rounded" />
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="product-desc">
                        <div class="card-header text-bg ml-0  row ">
                            <div class="col-12 col-md-6">
                                <h1 class="text-dark-50">@Model.Product.Name</h1>
                            </div>
                            <div class="col-12 col-md-6 text-end pt-4">
                                <span class="badge bg-info pt-2" style="height:30px;">@Model.Product.DigiPixCover.Name</span>
                                <span class="badge bg-warning pt-2" style="height:30px;">@Model.Product.Category.Name</span>
                            </div>
                        </div>
                        <div class="tab product-detls-tab">
                            <div class="row">
                                    <ul class="tabs">
                                        <li>
                                            <a href="#"> Description</a>
                                        </li>
                                    </ul>
                                </div>

                            </div>
                        <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                    <div class="input-count-area">
                        <h3>Quantity</h3>
                        <div class="input-counter">
                            <span class="minus-btn"><i class='bx bx-minus'></i></span>
                                <input type="text" min="1" value="1" input asp-for="Count">
                            <span class="plus-btn"><i class='bx bx-plus'></i></span>
                        </div>
                    </div>
                        <div class="price">
                            <span class="new-price">@Model.Product.Price.ToString("C2")</span>
                        </div>
                    <div class="product-add">
                            <button class="default-btn" style="height:50px;" asp-action="Index">
                                Back to Home
                        </button>
                            <button class="default-btn" type="submit" value="Add to Cart">
                                Add to Cart
                            </button>
                    </div>
                    <div class="product-share">
                        <ul>
                            <li>
                                <span>Share:</span>
                            </li>
                            <li>
                                <a href="#" target="_blank">
                                    <i class='bx bxl-facebook'></i>
                                </a>
                            </li>
                            <li>
                                <a href="#" target="_blank">
                                    <i class='bx bxl-linkedin'></i>
                                </a>
                            </li>
                            <li>
                                <a href="#" target="_blank">
                                    <i class='bx bxl-twitter'></i>
                                </a>
                            </li>
                            <li>
                                <a href="#" target="_blank">
                                    <i class='bx bxl-instagram'></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12">
                <div class="tab product-detls-tab">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <ul class="tabs">
                                <li>
                                    <a href="#"> Description</a>
                                </li>
                            </ul>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</form>