@model Printer.Core.VM.ShoppingCartVM

<div class="inner-banner inner-bg6">
	<div class="container">
		<div class="inner-title">
			<h3>Cart</h3>
			<ul>
				<li>
					<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
				</li>
				<li>
					<i class='bx bxs-chevrons-right'></i>
				</li>
				<li>Cart</li>
			</ul>
		</div>
	</div>
</div>


<section class="cart-wraps-area ptb-100">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12">
				@if (Model.ListCart.Count() > 0)
				{
			      <form>
					<div class="cart-wraps">
						<div class="cart-table table-responsive">
							<table class="table table-bordered">
								<thead>
									<tr>
										<th scope="col">Product</th>
										<th scope="col">Name</th>
										<th scope="col">Unit Price</th>
										<th scope="col">Quantity</th>
										<th scope="col">Total</th>
									</tr>
								</thead>
								@foreach (var item in Model.ListCart)
								{
								<tbody>
									<tr>
										<td class="product-thumbnail">
											<img src="@item.Product.ImageUrl" class="rounded" style="width:100px; height:100px;">
										</td>
										<td class="product-name">
												@item.Product.Name
										</td>
										<td class="product-price">
												<span class="unit-amount">@item.Price.ToString("C2")</span>
										</td>
										<td class="product-quantity">
											<div class="input-counter">
												<span class="minus-btn">
														<a asp-action="minus" asp-route-cartId="@item.Id" class='bx bx-minus'></a>
												</span>
												<input type="text" value="1">
												<span class="plus-btn">
														<a asp-action="plus" asp-route-cartId="@item.Id" class='bx bx-plus'></a>
												</span>
											</div>
										</td>
										<td class="product-subtotal">
												<span class="subtotal-amount">@item.Price.ToString("C2")<span class="text-muted">&nbsp;x&nbsp;</span>@item.Count</span>
												<a asp-action="remove" asp-route-cartId="@item.Id" class="remove">
													<i class='bx bx-trash'></i>
												</a>
										</td>
									</tr>
								</tbody>
								}
							</table>
						</div>
						<div class="cart-buttons">
							<div class="row align-items-center">
								<div class="col-lg-7 col-sm-7 col-md-7">
									<div class="continue-shopping-box">
											<a asp-area="Customer" asp-controller="Home" asp-action="Index" class="default-btn">
												Continue Shopping
											</a>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-6">
							<div class="cart-totals">
								<h3>Cart Totals</h3>
								<ul>
										<li>Total <span><b>@Model.OrderHeader.OrderTotal.ToString("C2")</b></span></li>
								</ul>
									<a asp-action="Summary" class="default-btn">
									Proceed To Summary
								</a>
							</div>
						</div>
					</div>
				</form>
				}
				else
				{
				<h3 class="display-4 text-center">Your cart is empty.</h3>
				}
			</div>
		</div>
	</div>
</section>
